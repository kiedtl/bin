#!/bin/sh
#
# ed - open file in editor.
# (c) Kied Llaentenn (@kiedtl)
# See the LICENSE for more information.

[ ! -f "$1" ] && {
    printf "ed: \"${1}\" doesn't exist -- create? [nY] ";
    read ans;

    case "$ans" in
        [Yy]*) touch "$1" ;;
        *) ;;
    esac
}

[ -f "$1" ] && nvim "$1"
