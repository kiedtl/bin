#!/bin/sh
#
# simple-colored - simple, colored.
# (c) Kiëd Llaentenn <kiedtl@tilde.team>
# See the COPYING file for copyright information.

br="$(printf '\033[1;34m')"
re="$(printf '\033[0m')"
bo="$(printf '\033[1m')"

echo "
┌───────────┐   ${br}${USER}${re}@${br}$(hostname)${re}
│           │   ${br}os      ${re}$(os) $(uname)
│  ┌─────┐  │   ${br}shell   ${re}${SHELL##*/}
│  │ ·_· │  │   ${br}kernel  ${re}$(uname -r)
│  └─────┘  │   ${br}uptime  ${re}$(upt)
│ _     ___ │   ${br}pkgs    ${re}$(pkgs '$pkgs_total')
└┬─────────┬┘   ${br}memory  ${re}$(mem)
 └─────────┘
" 2>/dev/null
