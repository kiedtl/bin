#!/bin/sh

# --- colors ---
image=$(printf "\033[31m\033[7m")
label=$(printf "\033[0m\033[31m")
reset=$(printf "\033[0m")

# --- information ---
. /etc/os-release;k=`uname -r`;while IFS=: read -r a b;do b=${b%kB};case $a in MemTotal)x=$((x+=b));t=$((t=b));;Shmem)x=$((x+=b));;MemFree|Buffers|Cached|SReclaimable)x=$((x-=b));;esac;done</proc/meminfo;x=$((x/=1024));t=$((t/=1024))

# --- display ---
ascii="
${image}                        
${image}                        
${image}           ___          
${image}          (.Â· |         
${image}          (<> |         
${image}         / __  \        
${image}        ( /  \ /|       
${image}       _/\ __)/_)       
${image}       \/_____\/        
${image}                        
${image}                        
${image}                        
"

echo "$ascii"

print_info() {
    printf '%s%-8s%s%16s\n' "${label}" "$1" \
        "${reset}" "$2"
}

print_info "USER"   "${USER}@$(hostname)"
print_info "OS"     "${PRETTY_NAME:-?}"
print_info "UPTIME" "$(uptime)"
print_info "WM"     "2bwm"
print_info "EDITOR" "neovim"
print_info "SHELL"  "${SHELL##*/}"
print_info "PKGS"   "$(xbps-query -l | wc -l)"
print_info "MEMORY" "${x}M / ${t}M"
print_info "TEMP"   "$(temp)"
print_info "KERNEL" "$k"

16
