#!/bin/bash
#
# ndmen: dmenu wrapper with better defaults
# usage: ndmen [FILE] [SHELL] [W] [H] [X] [Y]
# 	FILE default: dmenu_path
#	SHELL default: /bin/sh
#	example:
#		ndmen /etc/some_file_with_multiple_lines /bin/cat
#
# (c) Kied Llaentenn
# see the LICENSE for more info.

set -- $(dimensions) "$@"
w=$(echo "$1 / 1.75" | bc)
x=$(( $1 / 2 - $w / 2 ))
y=$(( $2 / 5 ))
h=$(( $2 / 50 ))
shift 2

[ -z "$1" ] && p="/sbin/dmenu_path"
[ -f "$1" ] && p="cat $1"

[ -z "$2" ] && s="${SHELL:-"/bin/sh"}" \
	|| s="cat"

${p} | /sbin/dmenu -nb "#0c0f15" -nf "#cfd3d9" -sb "#5f728c" -sf "#0c0f15" -p ' > ' -fn 'ttyp0:size=12' -l "${4:-$h}" -x "${5:-$x}" -y "${6:-$y}" -wi "${3:-$w}" | "${s}" &

# 0C0F15 80797E 3C5783 5F728C 77889B 74B7C6 97A2AE cfd3d9 cfd3d9 80797E 3C5783 5F728C 77889B 74B7C6 97A2AE cfd3d9
