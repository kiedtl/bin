#!/bin/sh
#
# interface: get network interface
# (c) KiÃ«d Llaentenn
# originally from http://github.com/mitchweaver/bin
#
# (wifi preferred, if no wifi interface
#  is found try to use ethernet)
#

for dev in wl ens eth enp; do
    set -- "$(ip l | grep $dev)"
    [ -z "$1" ] || break
done

echo "$*" | \
    sed 's/Link//' | \
    awk '{print $2}' | \
    sed 's/://' | \
    head -n 1
