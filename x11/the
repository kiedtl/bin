#!/bin/mksh
#
# the - simple themes
# (c) KiÃ«d Llaentenn <kiedtl@tilde.team>
# See the COPYING file for copyright information.

if [ -z "$1" ]; then
    # pick a random palette
    #colors=(~/etc/colors/palettes/*)
    #picked="${colors[$((RANDOM%${#colors[@]}))]}"
    n=$(ls ~/etc/colors/palettes/ | ndmen 'cat -' cat)
    set -- "$n"
fi

picked="$HOME/etc/colors/palettes/$1"
[ -f "$picked" ] || {
    printf 'invalid colorscheme: "%s"\n' "$1"
    exit 1;
}

palette=($(cat $picked | tr '\n' ' ' | tr -d '#'))

printf 'using %s\n' "$(basename $picked)"

# set the palette and color
wallpaper=
if [ "${palette[19]}" ]; then
    wallpaper="/home/kiedtl/img/wallpapers/${palette[19]}"
    feh --bg-fill "${wallpaper}" &
else
    hsetroot -solid "#${palette[1]}" &
fi

paleta <<< "$(tr ' ' '\n' <<< "${palette[@]}" | head -n19)" &

echo "
{
    \"wallpaper\": \"${wallpaper}\",
    \"alpha\": \"100\",
    \"special\": {
        \"background\": \"#${palette[1]}\",
        \"foreground\": \"#${palette[0]}\",
        \"cursor\": \"#${palette[2]}\"
    },
    \"colors\": {
        \"color0\": \"#${palette[3]}\",
        \"color1\": \"#${palette[4]}\",
        \"color2\": \"#${palette[5]}\",
        \"color3\": \"#${palette[6]}\",
        \"color4\": \"#${palette[7]}\",
        \"color5\": \"#${palette[8]}\",
        \"color6\": \"#${palette[9]}\",
        \"color7\": \"#${palette[10]}\",
        \"color8\": \"#${palette[11]}\",
        \"color9\": \"#${palette[12]}\",
        \"color10\": \"#${palette[13]}\",
        \"color11\": \"#${palette[14]}\",
        \"color12\": \"#${palette[15]}\",
        \"color13\": \"#${palette[16]}\",
        \"color14\": \"#${palette[17]}\",
        \"color15\": \"#${palette[18]}\"
    }
}
" > /tmp/$$-the-wal-theme.json
wal -qnst --theme /tmp/$$-the-wal-theme.json
xr
pkill -9 polybar # somehow the bottom bar stays alive w/o -9
polybar -r top    &
polybar -r bottom &
