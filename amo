LOGS="$HOME/.local/share/among-sus/log-$(date +%Y-%m-%d).txt"

if has rlwrap; then
    rlwrap nc tilde.team 1234 | tee -a "$LOGS"
else
    nc tilde.team 1234 | tee -a "$LOGS"
fi
